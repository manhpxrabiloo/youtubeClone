{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "tests": ["tests/*"],
      "@components/*": ["src/components/*"],
      "@api/*": ["src/api/*"],
      "@constants/*": ["src/constants/*"],
      "@hooks/*": ["src/hooks/*"],
      "@routes/*": ["src/routes/*"],
      "@screen/*": ["src/screen/*"],
      "@utils/*": ["src/utils/*"],
      "@icons/*": ["src/icons/*"],
      "@types/*": ["src/types/*"],
    }
  }
}
